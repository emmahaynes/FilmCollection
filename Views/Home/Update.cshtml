@{
    ViewBag.Title = "Add A Movie";
}

<!--Emma Haynes 2.3.21-->

@model FilmCollection.Models.FormResponse
<!--Movie form: data will be sent to tempStorage-->

<form asp-action="FilmUpdateForm" method="post">
    <input type="hidden" name="FilmId" value="@Model.FilmId" />
    <div>
        <label asp-for="Category">Category:</label>
        <input asp-for="Category" />
    </div>
    <br />
    <div>
        <label asp-for="Title">Title:</label>
        <input asp-for="Title" />
    </div>
    <br />
    <div>
        <label asp-for="Year">Year:</label>
        <input asp-for="Year" />
    </div>
    <br />
    <div>
        <label asp-for="Director">Director:</label>
        <input asp-for="Director" />
    </div>
    <br />
    <div>
        <label asp-for="Rating">Rating:</label>
        <select asp-for="Rating">
            <option value="">Select One</option>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
        </select>
    </div>
    <br />
    <div>
        <label asp-for="Edited">Was the film edited?</label>
        <select asp-for="Edited">
            <option value="">Select One</option>
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
    </div>
    <br />
    <div>
        <label asp-for="Lent">Lent to:</label>
        <input asp-for="Lent" />
    </div>
    <br />
    <div>
        <label asp-for="Notes">Notes:</label>
        <input asp-for="Notes" />
    </div>
    <br />
    <button type="submit">Update</button>
    <div asp-validation-summary="All"></div> <!--This prints out the errors when submitting-->

</form>
