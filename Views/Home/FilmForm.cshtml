@{
    ViewBag.Title = "Add A Movie";
}

<!--Emma Haynes 2.3.21-->

@model FilmCollection.Models.FormResponse

<!--Movie form: data will be sent to tempStorage-->

<form class="form-horizontal" asp-action="FilmForm" method="post">
    <div class="form-group form-inline">
        <label class="control-label col-sm-2" asp-for="Category">Category:</label>
        <div class="col-sm-2">
            <input class="form-control" asp-for="Category" />
        </div>
    </div>
    <div class="form-group form-inline">
        <label class="control-label col-sm-2" asp-for="Title">Title:</label>
        <div class="col-sm-3">
            <input class="form-control" asp-for="Title" />
        </div>
    </div>
    <div class="form-group form-inline">
        <label class="control-label col-sm-2" asp-for="Year">Year:</label>
        <div class="col-sm-3">
            <input class="form-control" asp-for="Year" />
        </div>
    </div>
    <div class="form-group form-inline">
        <label class="control-label col-sm-2" asp-for="Director">Director:</label>
        <div class="col-sm-3">
            <input class="form-control" asp-for="Director" />
        </div>
    </div>
    <div class="form-group form-inline">
        <label class="control-label col-sm-2" asp-for="Rating">Rating:</label>
        <div class="col-sm-3">
            <select class="form-control" asp-for="Rating">
                <option value="">Select One</option>
                <option value="G">G</option>
                <option value="PG">PG</option>
                <option value="PG-13">PG-13</option>
                <option value="R">R</option>
            </select>
        </div>
    </div>
    <div class="form-group form-inline">
        <label class="control-label col-sm-2" asp-for="Edited">Was the film edited?</label>
        <div class="col-sm-3">
            <select class="form-control" asp-for="Edited">
                <option value="">Select One</option>
                <option value="true">Yes</option>
                <option value="false">No</option>
            </select>
        </div>
    </div>
    <div class="form-group form-inline">
        <label class="control-label col-sm-2" asp-for="Lent">Lent to:</label>
        <div class="col-sm-3">
            <input class="form-control" asp-for="Lent" />
        </div>
    </div>
    <div class="form-group form-inline">
        <label class="control-label col-sm-2" asp-for="Notes">Notes:</label>
        <div class="col-sm-3">
            <input class="form-control" asp-for="Notes" />
        </div>
    </div>
    <div class="form-group m-3">
        <div class="col-sm-offset-2 col-sm-2">
            <button class="btn btn-dark form-control" type="submit">Submit</button>
        </div>
    </div>
    <div asp-validation-summary="All"></div> <!--This prints out the errors when submitting-->

</form>
